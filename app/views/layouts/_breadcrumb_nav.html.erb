<nav class="navbar navbar-inverse navbar-static-top text-center  ">  
  <div class="container">  

    <h1 class="navbar-brand pull-right main-right ">
        <% if account_signed_in? %>
          <%= link_to "Sign Out", destroy_account_session_path, method: :delete%>
          <%= link_to "My Account", account_path(current_account)  %> 
        <% else %>
          <%= link_to "Sign In", new_account_session_path %> 
        <% end %>
    </h1>

  
    

  
    <h1 class="navbar-brand main-left ">
      <% if @post.present? && !@post.new_record?
        category = @post.category %>
        <%= link_to "Home", root_path %> 
        >> <%= link_to category.name, category_path(category) %> >>
        <%= @post.title %>
      <% end %>

      <% if controller.controller_name == "categories" %>
        <%= link_to "Home", root_path %> 
        >>  <%= render "categories/category_sidebar" %>
      <% end %>

      <% if controller.controller_name == "accounts" %>
        <%= link_to "Home", root_path %> 
        >>  <%=  'My Account' %>
      <% end %>

      <% if @post.present? && @post.new_record?%>
        <%= link_to "Home", root_path %> 
        >>  <%=  'Create New Post' %>
      <% end %>

      <% if controller.controller_name == "posts" && !@post.present? %>
        <%= link_to "Home", root_path %> 
        >>  <%=  'Search Results' %>
      <% end %>
    </h1>
  </div>
</nav>
  
  
 
