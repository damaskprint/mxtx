<div class="card  bg-dark  text-light">
  <div class="card-body">
    <h1 class="card-title">
      <%= @category.name %>
    </h1>


      <div class="col">
        



        <% @posts.order("created_at DESC").each do |post| %>
            <div class="category-post">
              <span class="post-title"><%= link_to post.title, post_path(post) %></span>
              <span class="post-date"><%= time_ago_in_words post.created_at %></span>
            </div>
          
        <% end %>

        <%= will_paginate @posts %>
      </div>

    

    <br>
    <div class="row justify-content-center">
      <div class="col-4">
        <% if @posts.empty? %>
         <p> no posts to display </p>
        <% end %>
      </div>
    </div>



  </div>
</div>

