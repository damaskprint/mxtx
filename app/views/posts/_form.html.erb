<%= form_with(model: post, local: true) do |form| %>

  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <div class="form-group">
      <label> Contact by Phone/Email/Social media tag :</label>
      <input type="contact" class="form-control" id="<%= form.text_field :contact %>
      <small id="emailHelp" class="form-text text-muted">Optional</small>
    </div>

    <div class="form-group">
      <label>Posting as :</label>
      <select class="form-control" id=<%= form.select :category_id, Category.all.collect {|c| [ c.name, c.id ] },{:include_blank => true} %>
      </select>
    </div>


    <div class="form-group">
      <label>City :</label>
      <select class="form-control" id=<%= form.select :city_id, City.all.collect {|c| [ c.name, c.id ] },{:include_blank => true} %>
      </select>
    </div>

    <div class="form-group">
      <label>Genre :</label>
      <select class="form-control" id=<%= form.select :genre_id, Genre.all.collect {|c| [ c.name, c.id ] },{:include_blank => true} %>
      </select>
    </div>

    <label>Intrument(s) insterested in :</label>
    <div class="form-check form-inline">

      <% Instrument.all.each do |instrument| %>
      <input class="form-check-input" type="checkbox" id=<%= check_box_tag "post[instrument_id][]", instrument.name, @post.instrument_id.include?(instrument.name), id: dom_id(instrument)  %>   
      <%= label_tag dom_id(instrument), instrument.name %>   
    <% end %>
    </div>


    <%= form.label :title, "Title of Post: " %>
    <%= form.text_field :title %>
    <br>
    <br>

    <%= form.label :content, "Post Description: " %>
    <%= form.text_area :content %>
    <br>
    <br>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
